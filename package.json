{
  "name": "form-receiver",
  "version": "1.0.0",
  "main": "dist/server.js",
  "author": "JJ Kasper <jj@jjsweb.site>",
  "license": "MIT",
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "test": "ava -v",
    "build": "rimraf dist && tsc",
    "start": "cross-env NODE_ENV=production node dist/server",
    "dev": "tsc -w & nodemon -w dist --exec 'node dist/server'",
    "lint": "tslint --fix src/**/*.ts && prettier --write '**/*.ts' '**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.{js,ts}": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "escape-html": "^1.0.3",
    "express": "^4.17.3",
    "express-rate-limit": "^3.3.2",
    "helmet": "^3.15.0",
    "node-fetch": "^2.3.0",
    "nodemailer": "^5.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/escape-html": "^0.0.20",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^3.3.0",
    "@types/helmet": "^0.0.42",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "@types/nodemailer": "^4.6.5",
    "ava": "^1.2.1",
    "get-port": "^4.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.0",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}
